	email = shigekazu.takei@dotdata.com
[github]
	user = takei-shg
[includeIf "gitdir:~/src/github.com/takei-shg/"]
  path = ~/.gitconfig_sub
[color]
	ui = auto
[core]
	editor = /usr/bin/vim
[push]
	default = current
[alias]
	adda = add -A
	st = status
	di = diff
	dic = diff --cached
	co = checkout
	sw = switch
	sc = switch -c
	br = branch
	cl = clone
	clx = clean -dxf
	ci = commit
	cia = commit -a
	cim = commit --amend
	rbi = rebase -i
	rbc = rebase --continue
	rba = rebase --abort
	rs = reset
	rh = reset --hard
	ra = remote add
	rv = remote -v
	ru = remote update --prune
	log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
	la = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset' -10
	plog = log --graph --pretty=format:'%h -%d %s %n' --abbrev-commit --date=relative --branches
	rb = for-each-ref --sort=-committerdate --count=10 --format='%(refname:short)' refs/heads/
[ghq]
	root = /Users/shiget/src
[commit]
	template = /Users/shiget/.gitmessage
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
