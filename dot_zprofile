function gitmain() {
  git config --global user.name "shige.takei-facilo"
  git config --global user.email "shigekazu.takei@facilo.jp"
}

function gitsub() {
  git config --global user.name "shige.takei"
  git config --global user.email "takei.shg@gmail.com"
}


